package frc.robot.subsystems;

import java.util.ArrayList;
import java.util.Collection;

import com.ctre.phoenix6.hardware.ParentDevice;
import com.ctre.phoenix6.hardware.TalonFX;
import com.ctre.phoenix6.Orchestra;

import edu.wpi.first.wpilibj.Joystick;

public class Musica{
    private static Musica musica;

    Orchestra theMusic;

    TalonFX falcon1;
    String musicFile;
    Joystick rightJoystick;

    public Musica(TalonFX falcon1Robot, String musicFileName){
        falcon1 = falcon1Robot;
        musicFile = musicFileName;

        Collection<ParentDevice> _instruments;
        _instruments.add(falcon1);
        theMusic = new Orchestra(_instruments);

        theMusic.loadMusic(musicFile);
    }

    public void PlayMusic(){
    
        // if(rightJoystick.getRawButton(3)){
            theMusic.play();
        // }
        
    }

    public static Musica getInstance() {
		if (musica == null) {
			musica = new Musica();
		}
		return musica;
	}
}
